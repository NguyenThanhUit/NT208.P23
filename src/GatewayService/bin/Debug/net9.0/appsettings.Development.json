{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auctions" : {
        "ClusterId": "auctions",
        "Match": {
          "Path": "/auctions/{**catch-all}"
        },
        "Transform":[
          {
            "PathPattern": "api/auctions/{**catch-all}"
          }
        ]
      },

      "search" : {
        "ClusterId": "search",
        "Match": {
          "Path": "/search/{**catch-all}",
          "Method": ["GET"]
        },
        "Transform":[
          {
            "PathPattern": "api/search/{**catch-all}"
          }
        ]
      }

    },
    "Clusters": {
      "auctions": {
        "Destinations": {
          "auctionApi": {
            "Address": "http://localhost:7001"
          }
        }
      },

      "search": {
        "Destinations": {
          "searchApi": {
            "Address": "http://localhost:7002"
          }
        }
      }
    }
  }
}
