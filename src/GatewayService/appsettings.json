{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "IdentityServiceUrl": "http://identity-svc",
  "ReverseProxy": {
    "Routes": {
      "ordersRead": {
        "ClusterId": "orders",
        "Match": {
          "Path": "/orders/{**catch-all}",
          "Methods": [
            "GET"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/orders/{**catch-all}"
          }
        ]
      },
      "ordersWrite": {
        "ClusterId": "orders",
        "Match": {
          "Path": "/orders/{**catch-all}",
          "Methods": [
            "POST",
            "PUT",
            "DELETE"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/orders/{**catch-all}"
          }
        ]
      },
      "search": {
        "ClusterId": "search",
        "Match": {
          "Path": "/search/products/{**catch-all}",
          "Methods": [
            "GET"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/search/products/{**catch-all}"
          }
        ]
      },
      "searchAuction": {
        "ClusterId": "search",
        "Match": {
          "Path": "/search/auctions/{**catch-all}",
          "Methods": [
            "GET"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/search/auctions/{**catch-all}"
          }
        ]
      },
      "buyingsWrite": {
        "ClusterId": "buyings",
        "Match": {
          "Path": "/buyings/create",
          "Methods": [
            "POST"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/buyings/create"
          }
        ]
      },
      "buyingsRead": {
        "ClusterId": "buyings",
        "Match": {
          "Path": "/buyings",
          "Methods": [
            "GET"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/buyings"
          }
        ]
      },
      "depositsWrite": {
        "ClusterId": "deposits",
        "Match": {
          "Path": "/wallets/deposit",
          "Methods": [
            "POST"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/wallets/deposit"
          }
        ]
      },
      "depositsRead": {
        "ClusterId": "deposits",
        "Match": {
          "Path": "/wallets/{userId}",
          "Methods": [
            "GET"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/wallets/{userId}"
          }
        ]
      },
      "VnPayDeposits": {
        "ClusterId": "deposits",
        "Match": {
          "Path": "/vnpay/CreatePaymentUrl",
          "Methods": [
            "GET"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/vnpay/CreatePaymentUrl"
          }
        ]
      },
      "auctionsRead": {
        "ClusterId": "auctions",
        "Match": {
          "Path": "/auctions/{**catch-all}",
          "Methods": [
            "GET"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/auctions/{**catch-all}"
          }
        ]
      },
      "auctionsWrite": {
        "ClusterId": "auctions",
        "Match": {
          "Path": "/auctions/{**catch-all}",
          "Methods": [
            "POST",
            "PUT",
            "DELETE"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/auctions/{**catch-all}"
          }
        ]
      },
      "bidsWrite": {
        "ClusterId": "bids",
        "Match": {
          "Path": "/bids",
          "Methods": [
            "POST"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/bids"
          }
        ]
      },
      "bidsRead": {
        "ClusterId": "bids",
        "Match": {
          "Path": "/bids/{**catch-all}",
          "Methods": [
            "GET"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/bids/{**catch-all}"
          }
        ]
      },
      "notifications": {
        "ClusterId": "notifications",
        "Match": {
          "Path": "/notifications/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "orders": {
        "Destinations": {
          "orderApi": {
            "Address": "http://order-svc"
          }
        }
      },
      "search": {
        "Destinations": {
          "searchApi": {
            "Address": "http://search-svc"
          }
        }
      },
      "buyings": {
        "Destinations": {
          "buyingsApi": {
            "Address": "http://buyings-svc"
          }
        }
      },
      "deposits": {
        "Destinations": {
          "depositsApi": {
            "Address": "http://deposits-svc"
          }
        }
      },
      "auctions": {
        "Destinations": {
          "auctionsApi": {
            "Address": "http://auctions-svc"
          }
        }
      },
      "bids": {
        "Destinations": {
          "bidsApi": {
            "Address": "http://bid-svc"
          }
        }
      },
      "notifications": {
        "Destinations": {
          "notifyApi": {
            "Address": "http://notify-svc/"
          }
        }
      }
    }
  }
}