{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "ordersRead": {
        "ClusterId": "orders",
        "Match": {
          "Path": "/orders/{**catch-all}",
          "Methods": [
            "GET"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/orders/{**catch-all}"
          }
        ]
      },
      "ordersWrite": {
        "ClusterId": "orders",
        "Match": {
          "Path": "/orders/{**catch-all}",
          "Methods": [
            "POST",
            "PUT",
            "DELETE"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/orders/{**catch-all}"
          }
        ]
      },
      "search": {
        "ClusterId": "search",
        "Match": {
          "Path": "/search/{**catch-all}",
          "Methods": [
            "GET"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/search/{**catch-all}"
          }
        ]
      },
      "buyingsWrite": {
        "ClusterId": "buyings",
        "Match": {
          "Path": "/buyings/create",
          "Methods": [
            "POST"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/buyings/create"
          }
        ]
      },
      "buyingsRead": {
        "ClusterId": "buyings",
        "Match": {
          "Path": "/buyings",
          "Methods": [
            "GET"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/buyings"
          }
        ]
      }
    },
    "Clusters": {
      "orders": {
        "Destinations": {
          "orderApi": {
            "Address": "http://localhost:7001"
          }
        }
      },
      "search": {
        "Destinations": {
          "searchApi": {
            "Address": "http://localhost:7002"
          }
        }
      },
      "buyings": {
        "Destinations": {
          "buyingsApi": {
            "Address": "http://localhost:7003"
          }
        }
      }
    }
  }
}