{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "IdentityServiceUrl": "http://identity-svc",
  "ReverseProxy": {
    "Routes": {
      "ordersRead": {
        "ClusterId": "orders",
        "Match": {
          "Path": "/orders/{**catch-all}",
          "Methods": [
            "GET"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/orders/{**catch-all}"
          }
        ]
      },
      "ordersWrite": {
        "ClusterId": "orders",
        "Match": {
          "Path": "/orders/{**catch-all}",
          "Methods": [
            "POST",
            "PUT",
            "DELETE"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/orders/{**catch-all}"
          }
        ]
      },
      "search": {
        "ClusterId": "search",
        "Match": {
          "Path": "/search/{**catch-all}",
          "Methods": [
            "GET"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/search/{**catch-all}"
          }
        ]
      },
      "buyingsWrite": {
        "ClusterId": "buyings",
        "Match": {
          "Path": "/buyings/create",
          "Methods": [
            "POST"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/buyings/create"
          }
        ]
      },
      "buyingsRead": {
        "ClusterId": "buyings",
        "Match": {
          "Path": "/buyings",
          "Methods": [
            "GET"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/buyings"
          }
        ]
      },
      "depositsWrite": {
        "ClusterId": "deposits",
        "Match": {
          "Path": "/wallets/deposit",
          "Methods": [
            "POST"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/wallets/deposit"
          }
        ]
      },
      "depositsRead": {
        "ClusterId": "deposits",
        "Match": {
          "Path": "/wallets/{userId}",
          "Methods": [
            "GET"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/wallets/{userId}"
          }
        ]
      },
      "VnPayDeposits": {
        "ClusterId": "deposits",
        "Match": {
          "Path": "/vnpay/CreatePaymentUrl",
          "Methods": [
            "GET"
          ]
        },
        "Transforms": [
          {
            "PathPattern": "api/vnpay/CreatePaymentUrl"
          }
        ]
      }
    },
    "Clusters": {
      "orders": {
        "Destinations": {
          "orderApi": {
            "Address": "http://order-svc"
          }
        }
      },
      "search": {
        "Destinations": {
          "searchApi": {
            "Address": "http://search-svc"
          }
        }
      },
      "buyings": {
        "Destinations": {
          "buyingsApi": {
            "Address": "http://buyings-svc"
          }
        }
      },
      "deposits": {
        "Destinations": {
          "depositsApi": {
            "Address": "http://deposits-svc"
          }
        }
      }
    }
  }
}